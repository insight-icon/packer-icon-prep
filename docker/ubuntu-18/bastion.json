{
  "builders": [
    {
      "ami_description": "Ubuntu 18.04 AMI configured to be used as ICON Bastion Node",
      "ami_name": "bastion-ubuntu-{{isotime | clean_resource_name}}-{{uuid}}",
      "associate_public_ip_address": true,
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "tags": {
        "Name": "icon-bastion",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Distro": "Ubuntu-18.04",
        "Release": "latest"
      },
      "source_ami_filter": {
        "filters": {
          "architecture": "x86_64",
          "block-device-mapping.volume-type": "gp2",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "099720109477"
        ]
      },
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    }
  ],
  "min_packer_version": "1.4.0",
  "provisioners": [
  {
    "type": "ansible",
    "pause_before": "30s",
    "user": "ubuntu",
    "playbook_file": "{{ user `playbook_file_path` }}"
  }
  ]
}
